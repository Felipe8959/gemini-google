import os

# Caminho para a pasta onde você extraiu os arquivos de stopwords
caminho_stopwords = '/seu/caminho/para/stopwords'

# Função para carregar as stopwords de um arquivo específico
def carregar_stopwords(idioma):
    caminho_arquivo = os.path.join(caminho_stopwords, f'{idioma}.txt')
    if os.path.exists(caminho_arquivo):
        with open(caminho_arquivo, 'r', encoding='utf-8') as f:
            stopwords = f.read().splitlines()
        return set(stopwords)
    else:
        raise FileNotFoundError(f"O arquivo de stopwords para o idioma '{idioma}' não foi encontrado.")

# Carregar as stopwords em português
stop_words_portugues = carregar_stopwords('portuguese')

print(stop_words_portugues)
