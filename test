SELECT 
    LENGTH(ncpf_usuar_conec_conto_receb) AS length_ncpf_usuar_conec_conto_receb,
    LENGTH(ncnpj_empr_conto_receb) AS length_ncnpj_empr_conto_receb,
    LENGTH(idocto_empr_conto_receb) AS length_idocto_empr_conto_receb,
    LENGTH(idocto_usuar_conec_conto_receb) AS length_idocto_usuar_conec_conto_receb,
    LENGTH(hcriacao_conto_receb) AS length_hcriacao_conto_receb
FROM 
    sua_tabela
