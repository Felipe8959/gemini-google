import os
from nltk.corpus import stopwords

# Caminho da pasta onde você extraiu as stopwords
caminho_stopwords = '/seu/caminho/para/stopwords'

# Adiciona o caminho ao NLTK para que ele encontre os arquivos
if 'stopwords' not in stopwords.fileids():
    stopwords.fileids = lambda: [f.split('.')[0] for f in os.listdir(caminho_stopwords) if f.endswith('.txt')]
    stopwords.abspath = lambda fileid: os.path.join(caminho_stopwords, fileid + '.txt')

# Agora você pode usar as stopwords normalmente
stop_words = set(stopwords.words('portuguese'))

print(stop_words)
