import pandas as pd

def colunas_valores_unicos_tabela(df):
    dados = {'Coluna': [], 'Valores Únicos': []}
    for coluna in df.columns:
        valores_unicos = df[coluna].unique()
        dados['Coluna'].append(coluna)
        dados['Valores Únicos'].append(", ".join(map(str, valores_unicos)))
    
    df_valores_unicos = pd.DataFrame(dados)
    return df_valores_unicos

# Exemplo de uso
df = pd.DataFrame({
    'Nome': ['Ana', 'Bruno', 'Carlos', 'Ana'],
    'Idade': [25, 30, 22, 25],
    'Cidade': ['São Paulo', 'Rio de Janeiro', 'São Paulo', 'Curitiba']
})

df_valores_unicos = colunas_valores_unicos_tabela(df)
df_valores_unicos
