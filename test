import pandas as pd

# Exemplo do DataFrame df_distribuicao
df_distribuicao = pd.DataFrame({
    'DISTRIBUICAO': ['Manif1', 'Manif2', 'Manif3'],
    'STATUS MANIF': ['RESPONDIDO', 'EM ANÁLISE', 'RESPONDIDO']
})

# Exemplo do DataFrame df_analistas
df_analistas = pd.DataFrame({
    'ANALISTA': ['João', 'Maria', 'Pedro'],
    'ANALISTA QUALIDADE': ['X', 'X', ''],
    'STATUS MANIF': ['RESPONDIDO', 'RESPONDIDO', 'RESPONDIDO']
})

# Filtrando os analistas que têm 'ANALISTA QUALIDADE' marcado com 'X'
analistas_disponiveis = df_analistas[df_analistas['ANALISTA QUALIDADE'] == 'X']

# Filtrando as linhas do DataFrame 'df_distribuicao' que estão com 'STATUS MANIF' igual a 'RESPONDIDO'
manif_respondidas = df_distribuicao[df_distribuicao['STATUS MANIF'] == 'RESPONDIDO']

# Resetando o índice para facilitar a atribuição
manif_respondidas.reset_index(drop=True, inplace=True)
analistas_disponiveis.reset_index(drop=True, inplace=True)

# Fazendo a distribuição dos analistas disponíveis nas manifestações respondidas
manif_respondidas['ANALISTA'] = analistas_disponiveis['ANALISTA']

# Verificando o DataFrame resultante
print(manif_respondidas)
