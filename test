import nltk
from nltk.corpus import wordnet as wn
import os

# Defina o caminho para o diretório onde o WordNet foi extraído
caminho_wordnet = '/seu/caminho/para/wordnet'

# Adiciona o caminho do WordNet aos recursos do NLTK
nltk.data.path.append(caminho_wordnet)

# Verifique se você consegue acessar os dados do WordNet
sinonimos = wn.synsets('carro')  # Exemplo de busca de sinônimos para a palavra "carro"
print(sinonimos)

# Listar as definições de cada sinônimo encontrado
for sinonimo in sinonimos:
    print(sinonimo.name(), sinonimo.definition())
