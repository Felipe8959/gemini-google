from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

# Aguardar até que o container esteja visível
container = WebDriverWait(driver, 20).until(
    EC.visibility_of_element_located((By.CLASS_NAME, 'btn-group'))
)

# Rolar até o container para garantir a visibilidade
driver.execute_script("arguments[0].scrollIntoView();", container)

# Agora localizar e clicar no botão "Mes/Ano" dentro do container
btn_mes_ano = WebDriverWait(driver, 20).until(
    EC.element_to_be_clickable((By.ID, 'btn-mensal'))
)
btn_mes_ano.click()
